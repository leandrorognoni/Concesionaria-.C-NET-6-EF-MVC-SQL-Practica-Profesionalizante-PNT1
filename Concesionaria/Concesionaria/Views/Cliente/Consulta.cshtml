@model Concesionaria.Models.Cliente
 
@{
    ViewData["Title"] = "Login";
}

<h1>Consultá el estado de tu plan</h1>

<h4>Usuario</h4>
<hr />
 <h5 class="alert-danger">@ViewBag.Mensaje </h5>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Consulta">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Dni" class="control-label"></label>
                <input asp-for="Dni" class="form-control" />
                <span asp-validation-for="Dni" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contraseña" class="control-label"></label>
                <input type="password" asp-for="Contraseña" class="form-control" />
                <span asp-validation-for="Contraseña" class="text-danger"></span>
            </div>
            <div class="form-group separacionPadd">
                <input type="submit" class="btn btn-primary" value="Consultar" />
            </div>
        </form>
    </div>
</div>

<div>
      <a style="font-size:20px" class="separacionPadd" href='javascript:history.go(-1)'>Volver</a> 
</div>

 

 

 

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
 
